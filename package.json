{
    "name": "webpack-simple-boilerplate",
    "version": "1.0.0",
    "description": "Webpack 5 boilerplate (SASS, PostCSS, ESLint, Prettier, Styleint, Babel, React, TS)",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "webpack --node-env=development --config config/webpack.development.js",
        "watch": "webpack --node-env=development --config config/webpack.development.js --watch",
        "start": "webpack serve --node-env=development --config config/webpack.development.js",
        "build": "webpack --config config/webpack.production.js",
        "format": "npm run format:eslint && npm run format:prettier && npm run format:stylelint",
        "format:eslint": "npm run lint:eslint -- --fix",
        "format:prettier": "npm run lint:prettier -- --write",
        "format:stylelint": "npm run lint:stylelint -- --fix",
        "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:stylelint",
        "lint:eslint": "eslint \"**/*.{js,ts,jsx,tsx,[cm][jt]s}\" --debug",
        "lint:prettier": "prettier \"**/*.{json,js,ts,jsx,tsx,[cm][jt]s}\" --check",
        "lint:stylelint": "stylelint \"src/**/*.{css,scss}\""
    },
    "keywords": [
        "webpack",
        "webpack 5",
        "webpack boilerplate"
    ],
    "author": "whoisYeshua",
    "license": "ISC",
    "engines": {
        "node": ">=16"
    },
    "devDependencies": {
        "@babel/core": "^7.18.2",
        "@babel/eslint-parser": "^7.18.2",
        "@babel/preset-env": "^7.18.2",
        "@babel/preset-react": "^7.17.12",
        "@babel/preset-typescript": "^7.17.12",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
        "autoprefixer": "^10.2.5",
        "babel-loader": "^8.2.2",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.2.0",
        "css-minimizer-webpack-plugin": "^4.0.0",
        "csv-loader": "^3.0.3",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.23.2",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-unicorn": "^42.0.0",
        "eslint-webpack-plugin": "^3.0.1",
        "html-webpack-plugin": "^5.3.1",
        "mini-css-extract-plugin": "^2.2.0",
        "postcss": "^8.2.10",
        "postcss-loader": "^7.0.0",
        "prettier": "^2.2.1",
        "react-refresh": "^0.13.0",
        "sass": "^1.32.8",
        "sass-loader": "^13.0.0",
        "style-loader": "^3.2.1",
        "stylelint": "^14.9.1",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^26.0.0",
        "stylelint-config-standard-scss": "^4.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-prettier": "^2.0.0",
        "webpack": "^5.73.0",
        "webpack-bundle-analyzer": "^4.4.1",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^4.1.0",
        "webpack-merge": "^5.8.0",
        "xml-loader": "^1.2.1"
    },
    "dependencies": {
        "core-js": "^3.23.0",
        "jquery": "^3.6.0",
        "normalize.css": "^8.0.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0"
    }
}
