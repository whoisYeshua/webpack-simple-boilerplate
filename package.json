{
  "name": "webpack-simple-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "Webpack 5 boilerplate (SCSS, PostCSS, ESLint, Prettier, Styleint, Babel, React, TS)",
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack boilerplate"
  ],
  "license": "ISC",
  "author": "whoisYeshua",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whoisYeshua/webpack-simple-boilerplate.git"
  },
  "type": "module",
  "scripts": {
    "dev": "webpack --define-process-env-node-env=development --config config/webpack/webpack.development.js",
    "watch": "npm run dev -- --watch",
    "start": "webpack serve --define-process-env-node-env=development --config config/webpack/webpack.development.js",
    "build": "webpack --config config/webpack/webpack.production.js",
    "generate": "plop",
    "format": "npm run format:eslint && npm run format:prettier && npm run format:stylelint",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run lint:prettier -- --write",
    "format:stylelint": "npm run lint:stylelint -- --fix",
    "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:stylelint && npm run lint:typescript",
    "lint:eslint": "eslint \"**/*.{js,ts,jsx,tsx,[cm][jt]s}\" --debug",
    "lint:prettier": "prettier \"**/*.{json,js,ts,jsx,tsx,[cm][jt]s}\" --check",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "lint:typescript": "tsc --noEmit",
    "cm": "cz",
    "prepare": "husky install"
  },
  "dependencies": {
    "core-js": "^3.23.0",
    "jquery": "^3.6.0",
    "normalize.css": "^8.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.28.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^9.1.0",
    "commitizen": "^4.2.4",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "csv-loader": "^3.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-import-resolver-typescript": "^3.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^45.0.1",
    "eslint-webpack-plugin": "^3.0.1",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "mini-css-extract-plugin": "^2.2.0",
    "plop": "^3.1.0",
    "postcss": "^8.2.10",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.2.1",
    "react-refresh": "^0.14.0",
    "sass": "^1.32.8",
    "sass-loader": "^13.0.0",
    "style-loader": "^3.2.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.1.0",
    "webpack-merge": "^5.8.0",
    "xml-loader": "^1.2.1"
  },
  "engines": {
    "node": ">=16"
  }
}
